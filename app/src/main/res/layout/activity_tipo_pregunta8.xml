<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.manuel.prototipo_personaemocion.Actividades.Cuestionario">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="13dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="18dp"
                android:text="Texto de Preguntaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="23sp"
                android:id="@+id/tituloPregunta" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp"
                android:id="@+id/play"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="25dp"
                android:layout_below="@+id/tituloPregunta"
                >

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/play2"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/play"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:background="@null"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:clickable="true"
                    android:enabled="true" />

            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta1"
                style="@style/btnStyleBlue"
                android:layout_below="@+id/tituloPregunta"
                android:text="Respuesta 1"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:visibility="gone"
                android:enabled="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta2"
                android:text="Respuesta 2"
                android:layout_below="@+id/respuesta1"
                style="@style/btnStyleBlue"
                android:gravity="center"
                android:layout_marginBottom="18dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta3"
                android:text="Respuesta 3"
                style="@style/btnStyleBlue"
                android:layout_below="@+id/respuesta2"
                android:layout_marginBottom="18dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="true"
                android:enabled="true" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/respuesta4"
                android:text="Respuesta 4"
                style="@style/btnStyleBlue"
                android:layout_below="@+id/respuesta3"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:visibility="gone"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>